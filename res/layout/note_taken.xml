<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bc_result"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/result"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="64dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/button_camera_captured_save"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:padding="10dp"
            android:layout_weight="1"
            android:src="@drawable/ic_save2" />

        <ImageView
            android:id="@+id/button_camera_captured_discard"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:padding="10dp"
            android:layout_weight="1"
            android:src="@drawable/ic_discard2" />

        <!-- <ImageView
            android:id="@+id/button_camera_captured_share"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:padding="10dp"
            android:layout_weight="1"
            android:src="@drawable/ic_share3" /> -->
    </LinearLayout>

</LinearLayout>